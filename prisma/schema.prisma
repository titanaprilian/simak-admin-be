generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../generated/prismabox"
  binaryTargets               = ["native", "debian-openssl-3.0.x"]
}

model User {
  id            String               @id @default(cuid())
  loginId       String               @unique
  email         String?              @unique
  password      String
  isActive      Boolean              @default(true)
  tokenVersion  Int                  @default(0)
  roleId        String
  role          Role                 @relation(fields: [roleId], references: [id], onDelete: Restrict)
  refreshTokens RefreshToken[]
  lecturer      Lecturer?
  student       Student?
  positions     PositionAssignment[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Faculty {
  id          String               @id @default(cuid())
  code        String               @unique
  name        String
  description String?
  programs    StudyProgram[]
  positions   PositionAssignment[]
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
}

model StudyProgram {
  id          String               @id @default(cuid())
  facultyId   String
  faculty     Faculty              @relation(fields: [facultyId], references: [id], onDelete: Restrict)
  code        String               @unique
  name        String
  description String?
  lecturers   Lecturer[]
  students    Student[]
  positions   PositionAssignment[]
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  @@index([facultyId])
}

enum StatusMhs {
  tidak_aktif
  belum_program
  belum_daftar_ulang
  sudah_program
}

enum JenisMhs {
  reguler
  reguler_transfer
}

enum Gender {
  male
  female
}

model Student {
  id             String       @id @default(cuid())
  userId         String       @unique
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  name           String
  generation     Int
  gender         Gender
  yearOfEntry    Int          @map("year_of_entry")
  birthYear      Int          @map("birth_year")
  address        String?
  statusMhs      StatusMhs    @default(belum_program)
  kelas          String?
  jenis          JenisMhs     @default(reguler)
  cityBirth      String?      @map("city_birth")
  phoneNumber    String?      @map("phone_number")
  semester       Int          @default(1)
  studyProgramId String
  studyProgram   StudyProgram @relation(fields: [studyProgramId], references: [id], onDelete: Restrict)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([studyProgramId])
}

model Lecturer {
  id             String       @id @default(cuid())
  userId         String       @unique
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  nidn           String?
  fullName       String
  gender         String
  studyProgramId String
  studyProgram   StudyProgram @relation(fields: [studyProgramId], references: [id], onDelete: Restrict)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([studyProgramId])
}

model Role {
  id          String        @id @default(cuid())
  name        String        @unique
  description String?
  users       User[]
  permissions RoleFeature[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Feature {
  id          String        @id @default(cuid())
  name        String        @unique
  description String?
  roles       RoleFeature[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoleFeature {
  id String @id @default(cuid())

  roleId String
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  featureId String
  feature   Feature @relation(fields: [featureId], references: [id], onDelete: Cascade)

  canCreate Boolean @default(false)
  canRead   Boolean @default(false)
  canUpdate Boolean @default(false)
  canDelete Boolean @default(false)
  canPrint  Boolean @default(false)

  @@unique([roleId, featureId])
}

enum ScopeType {
  FACULTY
  STUDY_PROGRAM
}

model Position {
  id           String               @id @default(cuid())
  name         String               @unique
  scopeType    ScopeType
  isSingleSeat Boolean              @default(false)
  assignments  PositionAssignment[]
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
}

model PositionAssignment {
  id             String        @id @default(cuid())
  userId         String
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  positionId     String
  position       Position      @relation(fields: [positionId], references: [id], onDelete: Restrict)
  facultyId      String?
  faculty        Faculty?      @relation(fields: [facultyId], references: [id], onDelete: Restrict)
  studyProgramId String?
  studyProgram   StudyProgram? @relation(fields: [studyProgramId], references: [id], onDelete: Restrict)
  startDate      DateTime      @db.Date
  endDate        DateTime?     @db.Date
  isActive       Boolean       @default(true)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([userId])
  @@index([positionId])
  @@index([facultyId])
  @@index([studyProgramId])
}
