generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

generator prismabox {
  provider                    = "prismabox"
  output                      = "../generated/prismabox"
  binaryTargets               = ["native", "debian-openssl-3.0.x"]
  inputModel                  = "true"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String               @id @default(cuid())
  email         String?              @unique
  password      String
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  isActive      Boolean              @default(true)
  tokenVersion  Int                  @default(0)
  roleId        String
  loginId       String               @unique
  lecturer      Lecturer?
  positions     PositionAssignment[]
  refreshTokens RefreshToken[]
  student       Student?
  role          Role                 @relation(fields: [roleId], references: [id])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Faculty {
  id          String               @id @default(cuid())
  code        String               @unique
  name        String
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  description String?
  positions   PositionAssignment[]
  programs    StudyProgram[]
}

model StudyProgram {
  id                   String               @id @default(cuid())
  facultyId            String
  educationalProgramId String
  code                 String
  name                 String
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  description          String?
  lecturers            Lecturer[]
  positions            PositionAssignment[]
  students             Student[]
  academicClasses      AcademicClass[]
  faculty              Faculty              @relation(fields: [facultyId], references: [id])
  educationalProgram   EducationalProgram   @relation(fields: [educationalProgramId], references: [id])

  @@unique([code, facultyId])
  @@index([facultyId])
  @@index([educationalProgramId])
}

model Student {
  id             String       @id @default(cuid())
  userId         String       @unique
  name           String
  generation     Int
  gender         Gender
  yearOfEntry    Int          @map("year_of_entry")
  birthYear      Int          @map("birth_year")
  address        String?
  statusMhs      StatusMhs    @default(belum_program)
  kelas          String?
  jenis          JenisMhs     @default(reguler)
  cityBirth      String?      @map("city_birth")
  phoneNumber    String?      @map("phone_number")
  semester       Int          @default(1)
  studyProgramId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  studyProgram   StudyProgram @relation(fields: [studyProgramId], references: [id])
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([studyProgramId])
}

model Lecturer {
  id             String       @id @default(cuid())
  userId         String       @unique
  nidn           String?
  fullName       String
  gender         String
  studyProgramId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  studyProgram   StudyProgram @relation(fields: [studyProgramId], references: [id])
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  advisedClasses AcademicClass[]

  @@index([studyProgramId])
}

model Role {
  id          String        @id @default(cuid())
  name        String        @unique
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  permissions RoleFeature[]
  users       User[]
}

model Feature {
  id          String        @id @default(cuid())
  name        String        @unique
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  roles       RoleFeature[]
}

model RoleFeature {
  id        String  @id @default(cuid())
  roleId    String
  featureId String
  canCreate Boolean @default(false)
  canRead   Boolean @default(false)
  canUpdate Boolean @default(false)
  canDelete Boolean @default(false)
  canPrint  Boolean @default(false)
  feature   Feature @relation(fields: [featureId], references: [id], onDelete: Cascade)
  role      Role    @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, featureId])
}

model Position {
  id           String               @id @default(cuid())
  name         String               @unique
  scopeType    ScopeType
  isSingleSeat Boolean              @default(false)
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  assignments  PositionAssignment[]
}

model PositionAssignment {
  id             String        @id @default(cuid())
  userId         String
  positionId     String
  facultyId      String?
  studyProgramId String?
  startDate      DateTime      @db.Date
  endDate        DateTime?     @db.Date
  isActive       Boolean       @default(true)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  faculty        Faculty?      @relation(fields: [facultyId], references: [id], onDelete: Restrict)
  position       Position      @relation(fields: [positionId], references: [id])
  studyProgram   StudyProgram? @relation(fields: [studyProgramId], references: [id], onDelete: Restrict)
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([positionId])
  @@index([facultyId])
  @@index([studyProgramId])
}

model EducationalProgram {
  id            String         @id @default(cuid())
  name          String
  level         String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  studyPrograms StudyProgram[]

  @@unique([name, level])
}

model AcademicClass {
  id                String   @id @default(cuid())
  name              String
  studyProgramId    String
  enrollmentYear    Int
  capacity          Int      @default(30)
  advisorLecturerId String?

  studyProgram      StudyProgram @relation(fields: [studyProgramId], references: [id])
  advisorLecturer   Lecturer?    @relation(fields: [advisorLecturerId], references: [id])

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([studyProgramId, enrollmentYear, name])
}

enum StatusMhs {
  tidak_aktif
  belum_program
  belum_daftar_ulang
  sudah_program
}

enum JenisMhs {
  reguler
  reguler_transfer
}

enum Gender {
  male
  female
}

enum ScopeType {
  FACULTY
  STUDY_PROGRAM
}
